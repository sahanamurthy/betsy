<section class="title">
  <h1> Browse By Merchants </h1>
</section>
<% if params[:id]%>

<table class= "merchant product">
  <thead>
    <tr>
      <th>Product</th>
      <th>ID</th>
      <th>Category</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @product_by_merchant.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.id %></td>
        <td><%= product.categories %></td>
        <td><%= product.price %></td>
        <td><%= product.description%></td>
        <td><%= image_tag product.img_url %></td>
        <td> <%= link_to "Edit this product", edit_product_path, class: "button" %> </td>
        <td> <%= link_to "Delete this product", product_path(product), data: {method: :delete, confirm: "Are you sure you want to delete this product?"}, class: "button" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>


<section>
<% @merchants.each do |merchant|%>
<aside class="merchant-box">
  <p class ="title"> <%="#{merchant.name}"%> </p>
<%= link_to "#{merchant.username}",product_by_merchant_path(:id => merchant.id), class:"merchant_name" %>
</aside>
<%end%>
</section>
