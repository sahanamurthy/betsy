<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="columns large-3 small-12">
      <section class="user-info">
        <% if @current_merchant %>
          <p class="text-right">Logged in as <%= link_to @current_merchant.username, merchant_path(@current_merchant) %></p>
          <%= link_to "Log Out", logout_path, method: :post, class: "button float-right" %>
        <% else %>
          <p class="text-right">Not logged in</p>
          <%= link_to "Log In", "/auth/github", class: "button float-right" %>
        <% end %>
      </section>
    </div>

      <%= image_tag 'https://raw.githubusercontent.com/sahanamurthy/betsy/header_2/public/woody_logo.jpg', class: "woody"%>
      <section class = "menu">
        <%= link_to 'Sign Up'%>
        <%= link_to 'More Links'%>
        <%= link_to 'More Links'%>
        <%= link_to 'More Links'%>
        <%= link_to 'More Links'%>

        <%= image_tag 'https://raw.githubusercontent.com/sahanamurthy/betsy/header_2/public/treasure_chest.png', class:"cart"%>

      </section>
    </header>

    <section class="flash">
      <%= flash[:status] %>
      <% if flash[:result_text] or flash[:message] %>
      <h3>
        <%= flash[:status] == :failure ? "A problem occurred: " : "" %> <%= flash[:result_text] %>
      </h3>
      <% end %>

      <% if flash[:messages] %>
      <% flash.each do |name, problems| %>
      <em> <%= "#{problems}" %></em> <br>
      <% end %>
      <% end %>

    </section>

    <%= yield %>
  </body>
</html>
