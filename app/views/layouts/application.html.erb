<!DOCTYPE html>
<html>
<head>
  <title>Betsy</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <%= image_tag 'https://raw.githubusercontent.com/sahanamurthy/betsy/header_2/public/woody_logo.jpg', class: "woody"%>
    <section class = "menu">
    <%= link_to 'Sign Up', class:"button"%>
    <%= link_to 'More Links', class:"button"%>
    <%= link_to 'More Links', class:"button"%>
    <%= link_to 'More Links', class:"button"%>
    <%= link_to 'More Links', class:"button"%>

    <%= image_tag 'https://raw.githubusercontent.com/sahanamurthy/betsy/header_2/public/treasure_chest.png', class:"cart"%>
  </section>
  </header>
  <body>
    <section class="flash">
      <%= flash[:status] %>
      <% if flash[:result_text] or flash[:message] %>
      <h3>
        <%= flash[:status] == :failure ? "A problem occurred: " : "" %> <%= flash[:result_text] %>
      </h3>
    <% end %>

      <% if flash[:messages] %>
        <% flash.each do |name, problems| %>
        <em> <%= "#{problems}" %></em> <br>
        <% end %>
        <% end %>



    </section>


    <%= yield %>
  </body>
  </html>
