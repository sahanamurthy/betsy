/*backgorund image and min sizing*/
body {
    background-image: url(<%= asset_path 'ts2.jpg' %>);
    background-attachment: fixed;
   background-repeat: no-repeat;
   background-size: cover;
   -moz-background-size: cover;
   min-height: 500px;
   min-width: auto;

}

body li{list-style: none;margin:10%;margin-top: 15%;}

body a{color:white;font-family: 'Roboto Condensed', sans-serif;}

/*Container color for menu bar*/
nav{background-color: #e12e17;height:45px;width:100%;border-radius: 10px;opacity:.8}


.cart {height:50px;display: inline;float:right;}
.text-right, .text-right a {color:#e7a925;font-weight: bolder;display: inline;}
.woody{right:-100px;
  z-index:-1;
  position:relative;
  left:-10px;
}

/*Default button styling*/
.button {
  margin:10px;
  text-align: center;
  background-color:#e12e17;
  border-radius: 2px;
  font-weight: bold;
  font-size: 18px;
  text-decoration:none;
  }


/* Dropdown Button */
.dropbtn {
   background-color: #e12e17;
   color: white;
   padding: 0px;
   margin: 0px;
   font-weight: bold;
   font-size: 16px;
   border: none;
   cursor: pointer;
}

/* The container <div> - needed to position the dropdown content */
.dropdown {
   position: relative;
   display: inline-block;
   font-family: 'Erica One', cursive; color:gold;
}

/* Dropdown Content (Hidden by Default) */
.dropdown-content {
   display: none;
   position: absolute;
   background-color: #e12e17;
   min-width: 160px;
   box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
   z-index: 1;
}

/* Links inside the dropdown */
.dropdown-content a {
   color: black;
   /*padding: 12px 16px;*/
   text-decoration: none;
   display: block;
}

/* Change color of dropdown links on hover */
.dropdown-content a:hover {background-color:gold}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-content {
   display: block;
}

/* Change the background color of the dropdown button when the dropdown content is shown */
.dropdown:hover .dropbtn {
   background-color: #7289FF;
}

